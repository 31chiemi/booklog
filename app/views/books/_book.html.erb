      <div class="inner">
        <div class="genrename">
         <%= book.genre.name %>
        </div>
        <div class="picture">
          <%= image_tag book.image.variant(resize: '300x300'), class: 'book-image' if book.image.attached? %>
        </div>
        <div class="userlink">
          <a href="/users/<%= book.user.id %>">
            <%= book.user.nickname %>
          </a>
        </div>
        <div class="more">
          <ul class="more_list">
            <div class="lists">
              <div class="detail">
                <li>
                  <%= link_to '詳細', book_path(book.id), method: :get %>
                </li>
              </div>
            </div> 
          <% if user_signed_in? && current_user.id == book.user_id %>
            <div class="lists">
              <li>
                <%= link_to '編集', edit_book_path(book.id), method: :get %>
              </li>
            </div>
            <div class="lists">           
              <li>
                <%= link_to '削除', book_path(book.id), method: :delete %>
              </li>
            </div>
          <% end %>
          </ul>
        </div>
      </div>